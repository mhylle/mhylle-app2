# Application Configuration
APP_NAME=app2
APP_VERSION=1.0.0
APP_DESCRIPTION="Task Management System - Example App 2"

# Port Configuration (for development)
APP_PORT_FRONTEND=3002
APP_PORT_BACKEND=3102

# Database Configuration
POSTGRES_HOST=mhylle-postgres
POSTGRES_PORT=5432
POSTGRES_DB=app2_db
POSTGRES_USER=mhylle_user
POSTGRES_PASSWORD=your_secure_password_here

# Authentication Configuration
APP2_JWT_SECRET=your_app2_jwt_secret_here_make_it_strong_and_unique
JWT_EXPIRATION=7d

# API Configuration
API_PREFIX=api/app2
API_VERSION=v1

# Deployment Configuration
NODE_ENV=production
PORT=3000

# GitHub Container Registry
GHCR_USERNAME=your_github_username
GHCR_TOKEN=your_github_token

# Monitoring Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_SWAGGER_DOCS=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# Frontend Configuration
FRONTEND_BASE_HREF=/app2/
FRONTEND_API_URL=/api/app2

# Cache Configuration (if using Redis in the future)
# REDIS_HOST=mhylle-redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# External Services (example)
# THIRD_PARTY_API_KEY=your_api_key_here
# THIRD_PARTY_BASE_URL=https://api.example.com

# Development Configuration
DEV_SERVER_PORT=4200
DEV_API_PORT=3000
